<div class="container mt-5">
  <div class="row">
    <div class="col-3">
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
        新規投稿
      </button>
    </div>
    <div class="col-9 recipes">
      <%= render 'recipes', recipes: @recipes %>
    </div>
  </div>
</div>


<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">新規投稿</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= form_for @recipe, remote: true do |f| %>
      <div class="modal-body">
        <div class="form-group">
          <%= f.label :title, "レシピ" %>
          <%= f.text_field :title, class: "form-controll" %>
        </div>
        <div class="form-group">
          <%= f.label :body, "感想" %>
          <%= f.text_area :body, class: "form-controll" %>
        </div>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">閉じる</button>
        <%= f.submit "投稿する", class: "btn btn-primary" %>
      </div>
      <% end %>
    </div>
  </div>
</div>